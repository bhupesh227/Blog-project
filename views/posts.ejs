<%- include('partials/header.ejs') %>
<div class="header-post"><h3>Posts till now </h3></div>
<div class="container Grid">
    <% data.forEach(item => { %>
        <div class="card">
            <% if (item.image) { %>
                <img src="<%= item.image %>" alt="<%= item.title %>">
            <% } %>
            <h2><%= item.title %></h2>
            <p><strong>Writer:</strong> <%= item.name %></p>
            <p><strong>Date :</strong><%= item.date %></p>
            <p><%= item.paragraph %></p>

            <!--edit button-->
            <div class="button-section">
                <a href="/edit/<%= item.id %>"><button class="edit-button">Edit</button></a>
                <a href="/delete/<%= item.id %>"><button class="delete-button">Delete</button></a>
            </div>
            
        </div>
    <% }) %>
</div>

<%- include('partials/footer.ejs') %>